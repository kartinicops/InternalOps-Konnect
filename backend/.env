# ==============================================
#          ENVIRONMENT CONFIGURATION
# ==============================================

# SECRET_KEY Django (HARUS RAHASIA, jangan hardcode di settings.py)
SECRET_KEY=my-super-secret-key

# Mode Debug (True untuk development, False untuk production)
DEBUG=True

# Allowed Hosts (Pisahkan dengan koma jika lebih dari satu)
ALLOWED_HOSTS=localhost,127.0.0.1

# ==============================================
#          DATABASE CONFIGURATION
# ==============================================

# Gunakan 'django.db.backends.mysql' untuk MySQL
DB_ENGINE=django.db.backends.mysql

# Nama Database
DB_NAME=konnectInternal

# Username Database
DB_USER=konnect

# Password Database
DB_PASSWORD=konnectSukses

# Host Database (Gunakan 'localhost' jika database ada di server yang sama)
DB_HOST=localhost

# Port Database (MySQL default: 3306)
DB_PORT=3306

# ==============================================
#          FRONTEND CONFIGURATION (CORS)
# ==============================================

# Jika hanya ingin mengizinkan domain frontend tertentu, gunakan ini:
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000